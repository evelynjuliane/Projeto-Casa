@model IEnumerable<CasaDeShow.Models.Evento>
@{
    Layout= "_Layout";
}


        <section id="eventos">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <br>
                        <h2>Eventos</h2>
                        
                    </div>
                </div>
                <div class="row">
                    @foreach(var evento in Model){
                        @if(evento.Categoria.Status == true && evento.CasaShow.Status == true){
 
                            <div class="col-md-4 col-sm-6 produto">
                                <div class="card" style="width: 18rem; min-= ">
                                    <img src= @evento.img class="card-img-top" style="height: 18rem;" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">@evento.Nome</h5>
                                        <p class="card-text">GÃªnero: @evento.Categoria.Nome</p>
                                        <p class="card-text">Casa de Show: @evento.CasaShow.Nome</p>
                                        <p class="card-text">Local: @evento.CasaShow.Local</p>
                                        
                                        @if(evento.QuantDeIngressos == 0){
                                            <a class="btn btn-danger"> Ingressos Esgotados!</a> 
                                        }else{
                                            
                                            <form asp-action="Nova" asp-controller="User" style="display: inline;">
                                                <input type="hidden" name="id" id="id" value="@evento.Id">
                                            <button class="btn btn-danger">Buy</button>
                                             </form>
                                                 <a href="Exibir/@evento.Id" class="btn btn-success">Comprar</a>
                                            
                                        }
                                        
                                    </div>
                                </div>  
                            </div>      
                        } 
                    }                     
       
 
                </div>
         </section>