@model IEnumerable<CasaDeShow.Models.Evento>
@{
    Layout = "_LayoutAdmin";
}
<br>
<h2>Criar Novos Eventos</h2>
<hr/>
<a  class="btn btn-success" asp-action="NovoEvento" asp-controller="Admin">Adicionar novo Evento</a>
<br>
<br>
<table id="eventos" class=" table table-striped table-bordered table-responsive-lg">
    <thead>
        <tr>
            <th>Imagem</th>
            <th>Id</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Casa de Show</th>
            <th>Quantidade de Ingresso</th>
            <th>Data do Evento </th>

            <th>Valor do Ingresso(R$)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var evento in Model){
            @if(evento.Categoria.Status == true && evento.CasaShow.Status == true){
                <tr>
                    <td><img src= @evento.img height="60" width="60" ></td>
                    <td>@evento.Id</td>
                    <td>@evento.Nome</td>
                    <td>@evento.Categoria.Nome</td>
                    <td>@evento.CasaShow.Nome</td>
                    <td>@evento.QuantDeIngressos</td>
                    <td>@evento.Data</td>

                    <td>@evento.ValorDoIngresso</td>
                    
                    <td>
                        
                        <a class="btn btn-primary" href="/Admin/EditarEvento/@evento.Id" >Editar</a>
                        <form asp-action="Deletar" asp-controller="Eventos" style="display: inline;">
                            <input type="hidden" name="id" id="id" value="@evento.Id">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                        
                    </td>
                </tr>
            }
        }
    </tbody>
</table>