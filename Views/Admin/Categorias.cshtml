@model IEnumerable<CasaDeShow.Models.Categoria>
@{
    Layout= "_Layout";
}
<br>
<h2>Categorias</h2>

<hr/>
<a  class="btn btn-success" asp-action="NovaCategoria" asp-controller="Admin">Adicionar Nova Categoria</a>
<br>
<br>
<table id="categorias" class=" table table-striped table-bordered table-responsive-lg">
    <thead>
        <tr>
            <th>Imagem</th>
            <th>Id</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var categoria in Model){
            <tr>
                <td><img src= @categoria.img height="42" width="42"></td>
                <td>@categoria.Id</td>
                <td>@categoria.Nome</td>
                <td>
                  
                    <a class="btn" href="/Admin/EditarCategoria/@categoria.Id" ><img src="/img/icon-editar.png" style="width: 30px; height: 30px;"></a>
                    <form asp-action="Deletar" asp-controller="Categorias" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@categoria.Id">
                        <button class="btn"><img src="/img/icon-deletar.png" style="width: 30px; height: 30px;"></button>
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
