@model CasaDeShow.DTO.CasaShowDTO
@{
    Layout= "_Layout";
}
<h3>Nome da Casa De Show</h3>
<hr/>
<form class="form-horizontal" asp-controller="CasaShow" asp-action="Salvar" method = "POST">
<input type="hidden" asp-for="Id" value = "0">

<label asp-for="Nome">Nome</label>
<input type="text" asp-for="Nome" class="form-control" placeholder="Nome da Casa de Show">
<span asp-validation-for="Nome"> </span><br>

<label asp-for="Nome">Local</label>
<input type="text" asp-for="Local" class="form-control" placeholder="Nome do Local">
<span asp-validation-for="Local"> </span>

<button class="btn btn-success">Cadastrar</button>
</form>