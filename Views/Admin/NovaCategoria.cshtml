@model CasaDeShow.DTO.CategoriaDTO
@{
    Layout = "_LayoutAdmin";
}
<h3>Nome da Categoria</h3>
<hr/>
<form class="form-horizontal" asp-controller="Categorias" asp-action="Salvar" method = "POST" enctype="multipart/form-data">
<input type="hidden" asp-for="Id" value = "0">

<label asp-for="Nome">Nome</label>
<input type="text" asp-for="Nome" class="form-control" placeholder="Nome da Categoria">
<span asp-validation-for="Nome"> </span>


<input type="file" asp-for="img" name="files" class="form-control" >
<button class="btn btn-success">Cadastrar</button>
</form>