@model IEnumerable<CasaDeShow.Models.CasaShow>
@{
    Layout = "_LayoutAdmin";
}
<h2>Casas De Show</h2>

<hr/>
<a  class="btn btn-success" asp-action="NovoCasaShow" asp-controller="Admin">Adicionar</a>
<br>
<br>
<table id="casadeshow" class=" table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Local</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var casashow in Model){
            <tr>
                <td>@casashow.Id</td>
                <td>@casashow.Nome</td>
                <td>@casashow.Local</td>
                <td>
                    
                    <a class="btn btn-primary" href="/Admin/EditarCasaShow/@casashow.Id" >Editar</a>
                    <form asp-action="Deletar" asp-controller="CasaShow" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@casashow.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
