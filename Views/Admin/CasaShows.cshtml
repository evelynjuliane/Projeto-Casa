@model IEnumerable<CasaDeShow.Models.CasaShow>
@{
    Layout= "_Layout";
}
<h2>Casas De Show</h2>

<hr/>
<a  class="btn btn-success" asp-action="NovoCasaShow" asp-controller="Admin">Adicionar</a>
<br>
<br>
<table id="casadeshow" class=" table table-striped table-bordered table-responsive-lg">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Local</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var casashow in Model){
            <tr>
                <td>@casashow.Id</td>
                <td>@casashow.Nome</td>
                <td>@casashow.Local</td>
                <td>
                    
                    <a class="btn" href="Admin/EditarCasaShow/@casashow.Id" ><img src="/img/icon-editar.png" style="width: 30px; height: 30px;"></a>
                    <form asp-action="Deletar" asp-controller="CasaShow" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@casashow.Id">
                        <button class="btn"><img src="/img/icon-deletar.png" style="width: 30px; height: 30px;"></button>
                    </form>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
